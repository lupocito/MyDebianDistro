apt-get update
apt-get -y install code opera-stable avidemux virtualbox-6.1 azure-cli docker-ce docker-ce-cli containerd.io kubectl powershell

wget https://www.python.org/ftp/python/3.9.6/Python-3.9.6.tgz
tar xvf Python-3.9.6.tgz
cd Python-3.9.6
./configure --with-ensurepip=install --prefix=/opt/Python/3.9.6 --enable-optimizations
make -j 8
make install
cd -
rm -Rf Python-3.9.6

